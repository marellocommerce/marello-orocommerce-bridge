{% block _service_point_facility_businessHoursOverrides_widget %}
    {% spaceless %}
        {% from _self import marello_businesshoursoverrides_item_prototype as oro_collection_item_prototype %}
        {% if prototype is defined %}
            {% set prototype_html = oro_collection_item_prototype(form) %}
        {% endif %}
        {% set attr = attr|merge({'class': (attr.class is defined ? attr.class ~ ' ' : '') ~ 'marello-item-collection collection-fields-list' }) %}
        {% set id = id ~ '_collection' %}
<div class="row-oro">
    {% set prototype_name = form.vars.prototype_name %}
    <div {{ block('widget_container_attributes') }} data-last-index="{{ form.children|length}}" data-row-count-add="{{ form.vars.row_count_add }}" data-prototype-name="{{ prototype_name }}"{% if prototype_html is defined %} data-prototype="{{ prototype_html|escape }}"{% endif %}>
        <table class="grid table-hover table table-bordered table-condensed">
            <thead>
                <tr>
                    <th class="businesshoursoverrides-line-item-date"><span>{{ 'marello.servicepoint.businesshours.date.label'|trans }}</span></th>
                    <th class="businesshoursoverrides-line-item-openstatus"><span>{{ 'marello.servicepoint.businesshours.open_status.label'|trans }}</span></th>
                    <th class="businesshoursoverrides-line-item-timeperiods">
                        <div class="businesshoursoverrides-line-item-opentime line-item-time"><span>{{ 'marello.servicepoint.timeperiod.open_time.label'|trans }}</span></div>
                        <div class="businesshoursoverrides-line-item-closetime line-item-time"><span>{{ 'marello.servicepoint.timeperiod.close_time.label'|trans }}</span></div>
                        <div class="businesshoursoverrides-line-item-actions"><span>&nbsp;</span></div>
                    </th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody data-last-index="{{ form.children|length}}" data-prototype-name="{{ prototype_name }}"{% if prototype_html is defined %} data-prototype="{{ prototype_html|escape }}"{% endif %}>
        {% for child in form.children %}
                {{ oro_collection_item_prototype(child) }}
        {% endfor %}
            </tbody>
        </table>
    </div>

    {% if allow_add %}
    <a class="btn marello-add-line-item" data-container=".marello-item-collection tbody" href="javascript: void(0);"><i class="fa-plus"></i>{{ form.vars.add_label|default('marello.servicepoint.ui.servicepoint_facility.business_hours_override.add.label')|trans }}</a>
    {% endif %}
</div>
    {% endspaceless %}
{% endblock %}

{% macro marello_businesshoursoverrides_item_prototype(widget) %}
    {% if 'collection' in widget.vars.block_prefixes %}
        {% set form = widget.vars.prototype %}
        {% set name = widget.vars.full_name ~ '[' ~ widget.vars.prototype.vars.name ~ ']' %}
        {% set disabled = widget.vars.disabled %}
        {% set allow_delete = widget.vars.allow_delete %}
    {% else %}
        {% if widget.vars.disallow_delete is defined and widget.vars.disallow_delete %}
            {% set allow_delete = false %}
        {% else %}
            {% set allow_delete = widget.parent.vars.allow_delete %}
        {% endif %}
        {% set form = widget %}
        {% set name = widget.vars.full_name %}
        {% set disabled = widget.parent.vars.disabled %}
    {% endif %}

<tr data-content="{{ name }}" data-validation-optional-group {{ block('widget_container_attributes') }}
    class="marello-line-item display-values"
    data-page-component-module="oroui/js/app/components/view-component"
    data-page-component-options="{{ {view: 'marelloservicepoint/js/app/views/businesshoursoverrides-item-view'}|json_encode }}"
    data-layout="separate">
    {{ form_widget(form) }}

    {% if allow_delete %}
    <td class="businesshoursoverrides-line-item-remove marello-line-item-remove">
        <button type="button" class="marello-remove-line-item btn icons-holder"><i class="fa-remove"></i></button>
    </td>
    {% elseif widget.parent.vars.allow_delete %}
    <td></td>
    {% endif %}
</tr>
{% endmacro %}

