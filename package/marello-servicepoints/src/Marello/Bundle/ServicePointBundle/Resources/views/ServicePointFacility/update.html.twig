{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}
{% if form.vars.value.id %}
    {% set formAction = path('marello_servicepoint_servicepointfacility_update', { 'id': form.vars.value.id }) %}
    {% oro_title_set({params : {"%facility%": entity.facility.labels|localized_value }}) %}
{% else %}
    {% set formAction = path('marello_servicepoint_servicepointfacility_create', {'servicepoint_id': form.vars.value.servicePoint.id }) %}
{% endif %}

{% form_theme form.businessHours 'MarelloServicePointBundle:Form:businessHours.html.twig' %}
{% form_theme form.businessHoursOverrides 'MarelloServicePointBundle:Form:businessHoursOverrides.html.twig' %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('marello_servicepoint_servicepoint_view', {'id': entity.servicePoint.id})) }}
    {% if resource_granted('marello_servicepiont_servicepointfacility_update') %}
        {% set html = '' %}
        {% if resource_granted('marello_servicepoint_servicepoint_view') %}
            {% set html = UI.saveAndCloseButton({
                'route': 'marello_servicepoint_servicepoint_view',
                'params': {'id': '$servicePoint.id'}
            }) %}
        {% endif %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'marello_servicepoint_servicepointfacility_update',
            'params': {'id': '$id'}
        }) %}

        {{ UI.dropdownSaveButton({'html': html}) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('marello_servicepoint_servicepoint_view', {'id': form.vars.value.servicePoint.id}),
            'indexLabel': 'marello.servicepoint.servicepoint_facility.entity_plural_label'|trans,
            'entityTitle': (entity.facility.labels|localized_value)|default('N/A')
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marello.servicepoint.servicepoint_facility.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'marello-servicepointfacility-update' %}

    {% set businessHours %}
    <div class="servicepointfacility-businesshours"
         data-layout="separate">
        {{ form_widget(form.businessHours) }}
        {{ form_errors(form.businessHours) }}
    </div>
    {% endset %}

    {% set businessHoursOverrides %}
    <div class="servicepointfacility-businesshours-overrides"
         data-page-component-module="oroui/js/app/components/view-component"
         data-page-component-options="{{ {
             view: 'marelloservicepoint/js/app/views/businesshoursoverrides-items-view'
         }|json_encode }}"
         data-layout="separate">
        {{ form_widget(form.businessHoursOverrides) }}
        {{ form_errors(form.businessHoursOverrides) }}
    </div>
    {% endset %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_row(form.facility),
                form_row(form.phone),
                form_row(form.email),
            ]
        }
    ]}, {
        'title': 'marello.servicepoint.servicepoint_facility.business_hours.label'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                businessHours,
            ]
        }
    ]}, {
        'title': 'marello.servicepoint.servicepoint_facility.business_hours_overrides.label'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                businessHoursOverrides,
            ]
        }]
    }] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}

    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title' : 'marello.servicepoint.ui.servicepoint_facility.sections.additional'|trans,
            'subblocks': [{
                'title' : null,
                'useSpan': false,
                'data' : [
                    additionalData
                ]
            }]
        }]) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
